<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rutokenRed</item>
        <item name="colorPrimaryDark">@color/rutokenRed</item>
        <item name="colorAccent">@color/rutokenRed</item>
        <item name="android:actionBarStyle">@style/RutokenActionBar</item>
    </style>

    <style name="RutokenActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/rutokenRed</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>
